.container {
  display: flex;
  flex-direction: column;
  height: 100%; }
  .container .header {
    width: 100%;
    height: 46px;
    display: flex;
    justify-content: space-around;
    border-bottom: 8px solid #000;
    background: #fff; }
    .container .header image {
      width: 20px;
      height: 20px; }
    .container .header .logo {
      width: 50%;
      height: 46px;
      text-align: center;
      font-weight: bold;
      margin-left: 40px; }
    .container .header .name {
      letter-spacing: 6px; }
    .container .header .title {
      display: flex;
      justify-content: space-between; }
  .container .scroll {
    box-sizing: border-box;
    flex: 1;
    overflow: hidden; }
    .container .scroll swiper {
      width: 100%;
      height: 420px; }
      .container .scroll swiper image {
        width: 100%;
        height: 100%; }
    .container .scroll .title view {
      text-align: center; }
    .container .scroll .footer {
      background: #eee; }
      .container .scroll .footer .service {
        height: 40px;
        position: relative;
        border-bottom: 6px solid #000; }
        .container .scroll .footer .service .service1 {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          text-align: center;
          font-size: 12px;
          line-height: 40px;
          font-style: italic; }
        .container .scroll .footer .service .service2 {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          padding-top: 10px; }
          .container .scroll .footer .service .service2 .message {
            height: 14px;
            text-align: center;
            line-height: 14px;
            font-size: 12px; }
          .container .scroll .footer .service .service2 .messageBox {
            height: 22px;
            display: flex;
            justify-content: space-around; }
            .container .scroll .footer .service .service2 .messageBox image {
              width: 40%;
              height: 14px; }
            .container .scroll .footer .service .service2 .messageBox .line {
              height: 14px;
              width: 1px;
              background: #cbcbcb; }
      .container .scroll .footer .callBox {
        padding: 20px 0; }
        .container .scroll .footer .callBox .call {
          width: 80%;
          height: 30px;
          background: #000;
          color: #fff;
          line-height: 30px;
          border-radius: 4px;
          text-align: center;
          margin: 0 auto;
          font-size: 10px; }
      .container .scroll .footer .serviceMsg {
        background: #fff;
        display: flex;
        justify-content: space-between;
        padding: 10px 20px;
        margin-top: 20px; }
        .container .scroll .footer .serviceMsg image {
          width: 14px;
          height: 14px; }
        .container .scroll .footer .serviceMsg view {
          font-size: 10px; }
      .container .scroll .footer .follow {
        width: 80%;
        margin: 0 auto;
        padding: 10px 20px;
        margin-top: 20px;
        display: flex;
        justify-content: space-between; }
        .container .scroll .footer .follow .followContent {
          color: #555;
          font-size: 10px; }
        .container .scroll .footer .follow image {
          width: 12px;
          height: 12px; }
      .container .scroll .footer .copyright {
        padding: 10px 0;
        text-align: center;
        display: flex;
        justify-content: center;
        border-bottom: 6px solid #000; }
        .container .scroll .footer .copyright .v2 {
          letter-spacing: 3px;
          font-weight: bold; }
        .container .scroll .footer .copyright image {
          width: 14px;
          height: 14px;
          margin-top: 2px; }
